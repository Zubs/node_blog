<%- include('./partials/header') %>
    <div class="container pt-5">
      <h1 class="pt-5">Create Blog Post</h1>
      <form action="/blogs" class="mt-5" method="POST">
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Title" name="title" required>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Snippet" name="snippet" required>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              <textarea rows="5" class="form-control" placeholder="Body" name="body" required></textarea>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              <button class="btn btn-primary btn-lg form-control" type="submit">Post</button>
            </div>
          </div>
        </div>
      </form>
    </div>
<%- include('./partials/footer') %>